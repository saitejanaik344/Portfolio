<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control mt-2">
</div>

<div class="form-group mt-3">
    <label for="description">Description</label>
    <textarea name="description" id="description"  class="form-control mt-2"><%= article.description %></textarea> 
</div>

<div class="form-group mt-3">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown"  class="form-control mt-2"><%= article.markdown %></textarea> 
    
</div>

